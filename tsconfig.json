{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",  // Change this line
    "lib": ["dom", "es2015"],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
